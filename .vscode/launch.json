{
  // BSides Ballarat 2026 â€” Launch Configurations
  // Press F5 to launch the Extension Development Host for testing.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run @bsides-researcher Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${workspaceFolder}/bsides-researcher.code-workspace"
      ],
      "outFiles": [
        "${workspaceFolder}/extension/out/**/*.js"
      ],
      "preLaunchTask": "npm: compile - extension"
    }
  ]
}
