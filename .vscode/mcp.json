{
  // BSides Ballarat 2026 — MCP Server Configuration
  // See: https://code.visualstudio.com/docs/copilot/chat/mcp-servers
  //
  // These servers are configured at the workspace level so anyone
  // who clones the repo gets the same MCP tools automatically.
  "servers": {
    // Phase 1: Academic paper search via Semantic Scholar
    "semanticScholar": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "semantic-scholar-mcp"
      ],
      "env": {
        "SEMANTIC_SCHOLAR_API_KEY": "${input:semanticScholarApiKey}",
        "UV_LINK_MODE": "copy"
      }
    }
    // Phase 3: LM tools (download + screenshot) are provided by
    // the @bsides-researcher Chat Participant extension in extension/.
    // No separate MCP server needed — tools run in-process via
    // vscode.lm.registerTool().
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "semanticScholarApiKey",
      "description": "Semantic Scholar API Key (get one free at https://www.semanticscholar.org/product/api)",
      "password": true
    }
  ]
}
